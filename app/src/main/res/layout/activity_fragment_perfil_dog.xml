<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.omar_hidrogo_local.mascotas.fragment.FragmentPerfilDog">

    <LinearLayout
        android:id="@+id/llpm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/p2"
            app:civ_border_color="@color/colorblack"
            app:civ_border_width="3dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="10"
            android:id="@+id/imagep"/>

        <!--<ImageView
            android:id="@+id/imgperfilfoto"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/p2" />-->

        <TextView
            android:id="@+id/tvMascotaPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="SHUH TSU"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/llpm"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvPerfilMascotas"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</RelativeLayout>
